@model AppDev_FTS.ViewModels.UsersGroupViewModel
@{
    ViewBag.Title = "Index";
}

<h2>View Index Category</h2>

<p>
    @Html.ActionLink("Create a new Category", "Create", null, new { @class = "btn btn-primary" })
</p>


<div class="form-group">
    @using (Html.BeginForm("Index", "Account", FormMethod.Get))
    {
        <div class="form-group">
            @Html.TextBox("searchString", null, new { @class = "form-control" })
        </div>
        <button type="submit" class="btn btn-primary">Search</button>
    }
</div>


<h3>Category</h3>
<table class="table">
    <thead>
        <tr>
            <th scope="col">No.</th>
            <th scope="col">Category Name</th>
            <th scope="col">Description</th>h>
            <th scope="col">Action</th>
        </tr>
    </thead>
    <tbody>
        @{int i = 0;}
        @foreach (var category in Model.Categories)
        {
            <tr>
                <th scope="row">@{i++;}@i</th>
                <td>@category.CategoryName</td>
                <td>@category.Description</td>
                <td>
                    @Html.ActionLink("Edit", "Edit", "Account", new { id = category.Id }, new { @class = "btn btn-success" })
                    @Html.ActionLink("Delete", "Delete", "Account", new { id = category.Id }, new { @class = "btn btn-danger" })
                </td>
            </tr>
        }
    </tbody>
</table>